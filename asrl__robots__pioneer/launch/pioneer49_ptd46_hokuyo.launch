<launch>
  <param name="robot_description" command="cat $(find asrl_pioneer)/launch/pioneer_ptd46_hokuyo_urdf.xml" />
    
  <node pkg="tf" type="static_transform_publisher" name="tilt_laser_broadcaster" 
        args="0.0 0.0 0.055 3.14159 0.0 -0.015 /tilt_link /laser 100" />

  <node pkg="tf" type="static_transform_publisher" name="pioneer_sensor_broadcaster" 
      args="0 0 0 0 0 0 vehicle_base_link sensor 100" />
  
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher">
    <remap from="joint_states" to="/ptu/state" />
  </node>

  <include file="$(find asrl_pioneer)/launch/pioneer49_gamepad.xml" />
  <include file="$(find ptu46)/launch/ptu46_pioneer.xml" />

  <!-- Hokuyo -->
  <node name="hokuyo_node" pkg="asrl_hokuyo_node" type="hokuyo_node" output="screen">
    <param name="intensity" type="bool" value="true"/>
    <param name="skip" type="int" value="1"/>
    <param name="frame_id" type="string" value="/laser"/>
    <param name="min_ang" type="double" value="-2.05"/>
    <param name="max_ang" type="double" value="2.05"/>
  </node>
  
</launch>
